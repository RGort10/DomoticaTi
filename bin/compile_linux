#!/bin/bash
echo Going to library dir
cd ../cgi-bin/library

echo compile all .c to  all .o
gcc -c *.c $(mariadb_config --libs)

echo combining all .o to one .a
ar -rc libdomoticati.a *.o

echo Do something with a
ranlib libdomoticati.a

echo move to arduino dir
cd ../arduino

echo compile arduino controller
gcc sensor.c -o sensor.cgi -L../library -ldomoticati $(mariadb_config --libs)


echo move to api dir
cd ../api

echo compile c files
gcc actuator.c -o actuator.cgi -L../library -ldomoticati $(mariadb_config --libs)
gcc sensorHistory.c -o sensorHistory.cgi -L../library -ldomoticati $(mariadb_config --libs)
gcc arduino.c -o arduino.cgi -L../library -ldomoticati $(mariadb_config --libs)

echo move to www/html
cd ../../www/html

echo compile pug files
pug actuator.pug
pug arduino.pug
pug sensor.pug